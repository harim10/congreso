@model Inventario.Models.Productos
@{
    ViewData["Title"] = "Eliminar producto";
}

<form asp-action="EliminarProducto" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group row">
        <div class="col-12 text-center">
            <h3 class="text-danger">
                ¿Está seguro que desea eliminar el producto @Model.Nombre con precio @Model.Precio?
            </h3>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12 text-center">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Inicio" class="btn btn-dark">Regresar</a>
        </div>
    </div>
</form>