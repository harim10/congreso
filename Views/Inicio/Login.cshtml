@{
    ViewData["Title"] = "inicio de sesión";
}

<form asp-action="Login" method="post">
    <div class="form-group row">
        <div class="col-6">
            <label for="txtUsuario">Usuario</label>
            <input type="text" name="usuario" class="form-control" id="txtUsuario">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <label for="txtPassword">Contraseña</label>
            <input type="password" class="form-control" name="password" id="txtPassword">
        </div>
    </div>
     <div class="form-group row">
        <div class="col-6">
            <input type="submit" value="Iniciar Sesión" class="btn btn-lg btn-success">
        </div>
    </div>
</form>
@if(ViewBag.Error != null){
    <h3 class="text-danger">@ViewBag.Error</h3>
}